{
  "firestore": {
    "rules": "database/firestore.rules",
    "indexes": "database/firestore.indexes.json"
  },
  "database": {
    "rules": "database/realtime.rules.json"
  },
  "emulators": {
    "firestore": {
      "port": 8282
    },
    "functions": {
      "port": 5001
    }
  },
  "functions": {
    "source": "functions",
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  },
  "storage": {
    "rules": "storage/storage.rules"
  }
}
